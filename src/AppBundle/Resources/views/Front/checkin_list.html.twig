{% extends 'AppBundle:Front:base_display.html.twig' %}
{% block mostviewbody %}
    <section class="display_content">
        <div class="departures">
            lISTE COMPTOIR   
        </div>
        <div class="departures_flight_info">
            <div>
                <div class="checkin_col">{{'Comptoir N°' | trans}}</div>
                <div class="checkin_col">{{'Compagnie' | trans}}</div>
                <div class="checkin_col">{{'Numéro de vol' | trans}}</div>
                <div class="checkin_col">{{'Destination' | trans}}</div>
                <div class="checkin_col">{{'Programmé' | trans}}</div>
                <div class="checkin_col">{{'Remarque' | trans}}</div>
            </div>
            <div class="border_raw"></div>
            {% for flight in checkInList %}
                <div>
                    {% if flight['type'] == "depart" %}
                        <div class="checkin_col">{{flight['num_comptoir']}}</div>
                        <div class="checkin_col">
                            {% if flight['logo'] != null %}
                                <img style="width: 50px; height: 50px;" src="{{ asset(flight['logo'])}}">
                            {% endif %}
                        </div>
                        <div class="checkin_col">{{flight['nom_vol']}}</div>
                        <div class="checkin_col">
                            {% if flight['type'] == "depart" %}
                                {{flight['destination']}}
                            {% else %}    
                                {{flight['depart']}}
                            {% endif %}
                        </div>
                        <div class="checkin_col">
                            {% if flight['type'] == "depart" %}
                                {{flight['heureDepart']|date('H:i')}}
                            {% else %}    
                                {{flight['heureArrivee']|date('H:i')}}
                            {% endif %}
                        </div>
                        <div class="checkin_col">
                            {% set status = flight['statut'] %}
                            {% if status == "ontime" %}
                                En cours
                            {% elseif status == "departed" %}    
                                Parti
                            {% elseif status == "landed" %} 
                                A atteri
                            {% endif %}    
                        </div>  
                    {% endif %}
                </div>
                {% if flight['type'] == "depart" %}
                    <div class="border_final_raw"></div>
                {% endif %}
            {% endfor%}    
        </div>
    </section>
{% endblock %}
