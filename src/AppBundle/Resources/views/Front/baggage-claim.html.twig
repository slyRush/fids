{% extends 'AppBundle:Front:base_display.html.twig'%}
{% block mostviewbody %}
    <section class="display_content">
        <div class="departures_flight_info">
            <div>
                <div class="flight_col">{{'Compagnie' | trans}}</div>
                <div class="flight_col">{{'Numéro de vol' | trans}}</div>
                <div class="flight_col">{{'Destination' | trans}}</div>
                <div class="flight_col">{{'Statut' | trans}}</div>
                <div class="flight_col">{{'Remarque' | trans}}</div>
            </div>
            <div class="border_raw"></div>
            {% for baggage in baggages %}
                <div>
                    {% if baggage['type'] == "arrivee" and baggage['reseau'] == "international" %}
                        <div class="flight_col">
                            {% if baggage['logo'] != null %}
                                <img style="width: 50px; height: 50px;" src="{{ asset(baggage['logo'])}}">
                            {% endif %}
                        </div>
                        <div class="flight_col">{{baggage['nom_vol']}}</div>
                        <div class="flight_col">{{baggage['destination']}}</div>
                        <div class="flight_col">
                            {% set status = baggage['statut'] %}
                            {% if status == "ontime" %}
                                En cours
                            {% elseif status == "departed" %}    
                                Parti
                            {% elseif status == "landed" %} 
                                A atteri
                            {% endif %}    
                        </div> 
                        <div class="flight_col">
                            {% if baggage['situationBagage'] == "arriving" %}
                                Arrivées
                            {% elseif baggage['situationBagage'] == "delivered" %}    
                                Delivrés
                            {% endif %}   
                        </div>
                    {% endif %}
                </div>
                {% if baggage['type'] == "depart" and baggage['reseau'] == "international" %}
                    <div class="border_final_raw"></div>
                {% endif %}
            {% endfor%}    
        </div>
    </section>
{% endblock %}
