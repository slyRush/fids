{% extends 'AppBundle:Front:base_display.html.twig'%}
{% block headerbody %}{% endblock %}
{% block mostviewbody %}
    <div>
        <div class="row">
            <div class="col-md-11">                
                {% if flight[0]['logo'] != null %}
                    <img class="logo-content"style="width: 100%; height: 100px; padding: 0 0;" src="{{ asset(flight[0]['logo'])}}">
                {% endif %}
            </div>
            <div class="col-md-1">
                <span style="font-size: 75px; color: #36E8F5; font-weight: bold;" class="num_comptoir-content">{{flight[0]['num_comptoir']}}</span>
            </div>
        </div>
        <div class="row" style="width: 100%;">
            <div class="col-md-11">
                <div class="col-md-6" style="float: left;">
                    <div style="font-size: 120px;  color: #36E8F5; font-weight: bold; margin-top: -50px;" align="center">{{flight[0]['nom_vol']}}</div>
                </div>
                <div class="col-md-6" style="float: right; vertical-align: middle;" align="right">
                    <div class="row">
                        <div class="col-md-9">
                            <div style="font-size: 30px; color: #FBF479;font-weight: bold;" align="left">Heure du départ :</div>
                        </div>
                        <div class="col-md-3">
                        <span style="font-size: 35px; color: #fff;font-weight: bold;" class="hour-content">
                            {% if flight[0]['type'] == "depart" %}
                                {{flight[0]['heureDepart']|date('H:i')}}
                            {% else %}
                                {{flight[0]['heureArrivee']|date('H:i')}}
                            {% endif %}
                        </span>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-12" style="color: #fff;font-weight: bold; font-size: 150px;vertical-align: middle;" align="center" class="lieu-content">{#Sydney#}
                {% if flight[0]['type'] == "depart" %}
                    {{flight[0]['destination']}}
                {% else %}
                    {{flight[0]['depart']}}
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="position: absolute; bottom: 0;background-color: #3D414D; padding: 0 0;" align="center">
                <div style="font-size: 140px;font-weight: bold; color: #fff;" class="status-content">
                    {% set status = flight[0]['checkIn'] %}
                    {% if status == "cloture" %}
                        <span class="badge badge-warning" style="font-size: 40px;">Enregistrement clôturée</span>
                    {% elseif status == "departed" %}
                        <span class="badge badge-info" style="font-size: 40px;">Parti</span>
                    {% elseif status == "ouvert" %}
                        <span class="badge badge-success" style="font-size: 40px;">Enregistrement ouvert</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
