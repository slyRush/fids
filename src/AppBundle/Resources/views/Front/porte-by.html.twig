{% extends 'AppBundle:Front:base_display.html.twig'%}
{% block mostviewbody %}
    <section class="display_content">
        <div class="departures">
            <h1 align="center" style="color: #fff">Porte</h1>
        </div>
        <table class="table table-striped table-inverse">
        	<thead>
	        	<tr>
	                <th class="head_tabs">{{'Porte N°' | trans}}</th>
	                <th class="head_tabs">{{'Compagnie' | trans}}</th>
	                <th class="head_tabs">{{'Numéro de vol' | trans}}</th>
	                <th class="head_tabs">{{'Destination' | trans}}</th>
	                <th class="head_tabs">{{'Programmé' | trans}}</th>
	                <th class="head_tabs">{{'Statut' | trans}}</th>
	            </tr>
            </thead>
            <tbody class="content-info">
            	<tr>
            	{% if flight[0]['type'] == "depart" %}
                        <td class="content_tabs">{{flight[0]['num_porte']}}</div>
                        <td class="content_tabs">
                            {% if flight[0]['logo'] != null %}
                                <img style="width: 250px; height: 75px;" src="{{ asset(flight[0]['logo'])}}">
                            {% endif %}
                        </td>
                        <td class="content_tabs">{{flight[0]['nom_vol']}}</td>
                        <td class="content_tabs">
                            {% if flight[0]['type'] == "depart" %}
                                {{flight[0]['destination']}}
                            {% else %}    
                                {{flight[0]['depart']}}
                            {% endif %}
                        </td>
                        <td class="content_tabs">
                            {% if flight[0]['type'] == "depart" %}
                                {{flight[0]['heureDepart']|date('H:i')}}
                            {% else %}    
                                {{flight[0]['heureArrivee']|date('H:i')}}
                            {% endif %}
                        </td>
                        <td class="content_tabs">
                            {% set status = flight[0]['statut'] %}
                            {% if status == "annule" %}
                                <span class="badge badge-warning" style="font-size: 40px;">Annulé</span>
                            {% elseif status == "decolle" %}
                                <span class="badge badge-info" style="font-size: 40px;">Décollé</span>
                            {% elseif status == "embarquement" %}
                                <span class="badge badge-success" style="font-size: 40px;">Embarquement</span>
                            {% elseif status == "retarde" %}
                                <span class="badge badge-success" style="font-size: 40px;">Retardé</span>
                            {% elseif status == "pose" %}
                                <span class="badge badge-success" style="font-size: 40px;">Posé</span>
                            {% endif %}    
                        </td>  
                    {% endif %}
                
                {% if flight[0]['type'] == "depart" %}
                    <div class="border_final_raw"></div>
                {% endif %}
 
            	</tr>
        </table>
    </section>
{% endblock %}
