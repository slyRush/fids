{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}
{% block field %}
    {% set status = object.statut %}
    {% if status == "annule" %}
        Annulé
    {% elseif status == "decolle" %}
        Décollé
    {% elseif status == "embarquement" %}
        Embarquement
    {% elseif status == "retarde" %}
        Retardé
    {% elseif status == "pose" %}
        Posé
    {% elseif status == "termine" %}
        Terminé
    {% endif %}
{% endblock %}